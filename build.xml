<?xml version="1.0" ?>
<project name="AdAgency" default="deploy">
    <property name="jboss.home" value="D:\Politechnika\TAKE\wildfly-10.1.0.Final" />

    <path id="compile.classpath">
        <fileset dir="WebContent/WEB-INF/lib">
            <include name="*.jar" />
        </fileset>
        <fileset dir="${jboss.home}/common/lib">
            <include name="*.jar" />
        </fileset>
    </path>

    <target name="clean">
        <delete dir="dist" />
    </target>

    <target name="init" depends="clean">
        <mkdir dir="dist" />
    </target>
    <target name="war" depends="init">
        <war destfile="dist/${ant.project.name}.war" webxml="web/WEB-INF/web.xml">
            <fileset dir="web" />
        </war>
    </target>

    <target name="deploy" depends="war">
        <copy file="dist/${ant.project.name}.war" todir="${jboss.home}/standalone/deployments" />
    </target>
</project>
